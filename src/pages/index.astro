---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to Astro.">
	<main>
		<h1>Change the way you eat and generate new recipes every day</h1>
	</main>
</Layout>

<style>
	h1{
		font-size: 3.5rem;
		line-height: 3rem;
		font-weight: 500;
		text-align: center;
	}
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
</style>
